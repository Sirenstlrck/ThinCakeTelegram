<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Cake.Telegram</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageProjectUrl>https://github.com/Sirenstlrck/ThinCakeTelegram</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Sirenstlrck/ThinCakeTelegram</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Cake.Core" Version="5.0.0" />
      <PackageReference Include="Telegram.Bot" Version="22.6.0" />
    </ItemGroup>

</Project>
